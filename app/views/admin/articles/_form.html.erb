<div  id="content">
    <div class="block">
<%= form_for [:admin, @article] do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <span id="checkbox">
    <div class="field">
    <%= f.label "Draft?", class:"post_title"  %><br />
    <%= f.check_box :published %>
    </div>
  </span>

    <div class="field">
    <%= f.label :title, class:"post_title" %><br />
    <%= f.text_field :title, class:"input" %>
    </div>

    <div class="field">
    <%= f.label :content, class:"post_title"  %><br />
    <%= f.text_area :content, class:"input" %>
    </div>

    <div class="field">
    <%= f.label :tags, class:"post_title"  %><br />
    <%= f.text_field :tags, class:"input" %>
    </div>

    <div class="field">
    <%= f.label "Short URL", class:"post_title"  %><br />
    <%= f.text_field :shortUrl, class:"input" %>
    </div>

    <div class="actions">
    <div style="float: left; width: auto; padding-top: 22px; padding-right: 230px;"><%= link_to "Cancel", admin_path, class:"post_title" %></div>
    <%= f.submit class:"sm_button"%>
    
</div>
<% end %>
</div>
</div>
